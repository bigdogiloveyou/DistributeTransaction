<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xushu.account.mapper.AccountFlowMapper">

    <resultMap id="baseResultMap" type="com.xushu.account.entity.AccountFlow">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="uid" property="uid" jdbcType="VARCHAR"/>
        <result column="order_id" property="orderId" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="amount" property="amount" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="baseColumnList">
        id, uid, order_id, status, amount
    </sql>

    <select id="queryForUpdate" parameterType="java.lang.String" resultMap="baseResultMap">
        SELECT
        <include refid="baseColumnList"/>
        FROM
        account_flow
        WHERE
        uid = #{uid} and order_id = #{orderId} FOR UPDATE
    </select>

    <insert id="insert">
        INSERT INTO
        account_flow
        (uid,order_id,status,amount)
        VALUES
        (#{uid}, #{orderId}, #{status}, #{amount})
    </insert>

    <update id="updateStatus">
        UPDATE
        account_flow
        SET
        status = #{status}
        WHERE
        uid = #{uid} and order_id = #{orderId} and status = #{currentStatus}
    </update>

</mapper>