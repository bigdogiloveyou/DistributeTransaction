<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xushu.pay.mapper.PayOrderMapper">

    <resultMap id="baseResultMap" type="com.xushu.pay.entity.PayOrder">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="uid" property="uid" jdbcType="VARCHAR"/>
        <result column="order_id" property="orderId" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="amount" property="amount" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="baseColumnList">
        id, uid, order_id, status, amount
    </sql>

    <select id="query" parameterType="java.lang.String" resultMap="baseResultMap">
        SELECT
        <include refid="baseColumnList"/>
        FROM
        pay_order
        WHERE
        uid = #{uid} and order_id = #{orderId}
    </select>

    <insert id="insert">
        INSERT INTO
        pay_order
        (uid,order_id,status,amount)
        VALUES
        (#{uid}, #{orderId}, #{status}, #{amount})
    </insert>

</mapper>